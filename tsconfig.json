{
    // "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": [
            "ES5"
        ],
        "target": "ES5",
        "noEmit": false,
        "strict": false,
        "baseUrl": ".",
        "paths": {
            "micromark": [
                "index.d.ts"
            ],
            "micromark/stream": [
                "stream.d.ts"
            ]
        },
        "outDir": "dist"
    },
    "include": [
        "lib/**/*.ts",
        "lib/*.ts"
    ]
}
